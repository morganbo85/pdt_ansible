[Unit]
Description=Run ansible-pull to auto-provision
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
# Run as root (default); you can also explicitly set User=root if needed
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=/usr/bin/ansible-pull -o -U https://github.com/morganbo85/ansible_dt.git playbooks/local.yml

[Install]
WantedBy=multi-user.target
